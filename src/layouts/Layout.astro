---
import "../styles/global.css";

// 接收传入的 title 属性
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-wid
		th" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || "极客猿在线工具箱"}</title>

  </head>
  <body>
    <!-- 顶部导航栏 -->
    <nav class="bg-gray-100/80 border-b border-gray-200 sticky top-0 z-50">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-14">
          <!-- 左侧 Logo 和主导航 -->
          <div class="flex items-center space-x-8">
            <a href="/" class="text-gray-800 flex items-center space-x-2">
              <span class="text-2xl">🛠️</span>
              <span class="text-2xl font-bold">极客猿在线工具箱</span>
            </a>
            <div class="flex space-x-4"></div>
          </div>

          <!-- 右侧功能按钮 -->
          <div class="flex items-center space-x-4">
         
          </div>
        </div>
      </div>
    </nav>

    <slot />

  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
